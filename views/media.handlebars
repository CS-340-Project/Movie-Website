<main id="media-holder">
    <h2 id="movie-header">Media</h2>
    <div class="movie-flex-container">
	{{#each media}}
        <div id="media-container">
                <img id="media-img" src="{{img_url}}"/>
              
<p id="title-text">{{vm_title}}</p>
<p id="summary-text">{{summary}}</p>
  <p id="button-holder"><button type="button" class="ld_button"><i class="fas fa-thumbs-up"></i></button>
                <button type="button" class="ld_button"><i class="fas fa-thumbs-down"></i></button></p>
                <a  href = "/post" class = "review_link">Post a Review</a>
                <a  href = "/" class = "review_link">See Reviews</a>
                <form id="add-comment-form">
                <input type="text" name="comment" id="comment-field" class="add-comment-form-field" placeholder="Leave comment here...">
                <input type="submit" value="Add" id="add-comment-form-submit">
                 </form>
        </div>
	{{/each}}
    </div>

</main>

