<main id="signup-holder">
  <div id="signup-text">
    <form id="signup-form" action="/signup" method="post">  
      <h1 id="signup-title">Kernel</h1>
      <h2 id="signup-header">Sign Up</h2>
      <input type="text" name="username" id="signup-username-field" class="signup-form-field" pattern=".{1,}" required placeholder="Username">
      <input type="password" name="password" id="signup-password-field" class="signup-form-field" pattern=".{1,}" required placeholder="Password">
      <input type="submit" value="Sign Up" id="signup-form-submit">
    </form>
   </div>
  </main>

<script>
	document.getElementById("signup-username-field).addEventListener("invalid", myFunction);
	document.getElementById("signup-password-field).addEventListener("invalid", myFunction);
	function myFunction() {
		alert("Must at least contain input");
	}
</script>
