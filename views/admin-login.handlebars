<main id="login-holder">
   <div id="login-text">
    <form id="login-form" action="/admin-login" method="post">
      <h1 id="login-title">Kernel</h1>
      <h2 id="login-header">Admin Login</h2>
      <input type="text" name="admin_username" id="username-field" class="login-form-field" pattern=".{1,}" required placeholder="Username">
      <input type="password" name="admin_password" id="password-field" class="login-form-field" pattern=".{1,}" required placeholder="Password">
      <input type="submit" value="Login" id="login-form-submit">
   </form>
   </div>
  </main>

<script>
	document.getElementById("admin_username").addEventListener("invalid", myFunction);
	document.getElementById("admin_password").addEventListener("invalid", myFunction);
	function myFunction() {
  		alert("Must at least contain input");
	}
</script>
